<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/button_black_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/user_profile_image_search"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:layout_below="@+id/user_profile_image_search"
            android:gravity="center"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/user_name_search"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User profile name"
            android:textStyle="bold"
            android:layout_marginTop="2dp"

            android:layout_below="@+id/user_name_search"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/user_full_name_search"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:id="@+id/follow_btn_search"
            android:layout_below="@id/user_full_name_search"
            android:layout_centerHorizontal="true"
           android:textSize="12sp"
            android:text="Follow"
            android:textAllCaps="false"
            android:layout_margin="0dp"/>
    </RelativeLayout>

</RelativeLayout>